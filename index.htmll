<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>AdminTT97 - Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
        body { margin: 0; padding: 0; color: #ffd700; font-family: 'Orbitron', sans-serif; background-color: #000; overflow: hidden; height: 100vh; width: 100vw; display: flex; justify-content: center; align-items: center; }
        .background-image-overlay { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('https://w0.peakpx.com/wallpaper/77/439/wallpaper-desktop-pubg.jpg'); background-size: cover; background-position: center; opacity: 0.3; z-index: -1; filter: brightness(0.5); }
        .page-content { display: none; width: 100%; height: 100%; flex-direction: column; align-items: center; justify-content: center; padding: 20px; animation: fadeIn 0.4s ease-out; }
        .page-content.active { display: flex; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        .form-frame { background: rgba(0, 0, 0, 0.9); padding: 35px; border-radius: 20px; border: 2px solid #ffaa00; box-shadow: 0 0 30px rgba(255, 170, 0, 0.3); width: 100%; max-width: 360px; }
        .pubg-logo-text { font-size: 3.5em; font-weight: 900; color: #fff; text-shadow: 0 0 20px #ffaa00; border: 3px solid #fff; padding: 5px 25px; margin-bottom: 40px; background: rgba(0,0,0,0.4); }
        .login-input { width: 100%; padding: 15px; margin-bottom: 15px; background: rgba(30, 30, 30, 0.9); border: 1px solid #ffaa00; color: #fff; border-radius: 10px; font-family: 'Orbitron'; outline: none; text-align: center; }
        .action-button { width: 100%; padding: 16px; margin-top: 5px; background: linear-gradient(45deg, #ffaa00, #ff8800); color: #000; border: none; border-radius: 10px; font-family: 'Orbitron'; font-weight: 700; cursor: pointer; box-shadow: 0 5px 15px rgba(255, 136, 0, 0.4); }
        .duration-item { display: flex; justify-content: space-between; padding: 14px; margin-bottom: 10px; background: rgba(60, 60, 60, 0.4); border-radius: 8px; border: 1px solid #555; cursor: pointer; }
        .duration-item.selected { border-color: #ffaa00; background: rgba(255, 170, 0, 0.15); box-shadow: 0 0 15px rgba(255, 170, 0, 0.3); }
        .total-price-box { background: #ffaa00; color: #000; padding: 15px; border-radius: 10px; margin: 20px 0; font-weight: 700; text-align: center; }
        #key-output { margin-top: 20px; padding: 15px; background: #222; border-radius: 8px; color: #00ff00; font-weight: bold; border: 1px dashed #ffaa00; width: 100%; text-align: center; }
    </style>
</head>
<body>
    <div class="background-image-overlay"></div>
    <div id="page-1" class="page-content active">
        <h1 class="pubg-logo-text">PUBG</h1>
        <div class="form-frame">
            <input type="text" id="username" class="login-input" placeholder="LOGIN">
            <input type="password" id="password" class="login-input" placeholder="PASSWORD">
            <div id="login-message" style="color: #ff4747; margin-bottom: 10px; font-size: 0.8em; min-height: 20px; text-align: center;"></div>
            <button onclick="attemptLogin()" class="action-button">ENTER</button>
        </div>
    </div>
    <div id="page-2" class="page-content">
        <div class="form-frame">
            <h2 style="margin-top:0; text-align:center; color:#fff;">KEY GEN</h2>
            <div id="duration-list">
                <div class="duration-item selected" data-price="1" onclick="selectItem(this)"><span>TEST</span><span>$1</span></div>
                <div class="duration-item" data-price="3" onclick="selectItem(this)"><span>1 DAY</span><span>$3</span></div>
                <div class="duration-item" data-price="12" onclick="selectItem(this)"><span>1 WEEK</span><span>$12</span></div>
                <div class="duration-item" data-price="30" onclick="selectItem(this)"><span>1 MONTH</span><span>$30</span></div>
            </div>
            <div class="total-price-box">TOTAL: $<span id="total-price">1</span></div>
            <button onclick="generateKey()" class="action-button">GENERATE KEY</button>
            <div id="key-output">WAITING...</div>
        </div>
    </div>
    <script>
        let currentPrice = 1;
        function attemptLogin() {
            const u = document.getElementById('username').value;
            const p = document.getElementById('password').value;
            if(u === "Admin97" && p === "Admin1997") {
                document.getElementById('page-1').classList.remove('active');
                document.getElementById('page-2').classList.add('active');
            } else { document.getElementById('login-message').innerText = "WRONG LOGIN OR PASSWORD!"; }
        }
        function selectItem(el) {
            document.querySelectorAll('.duration-item').forEach(i => i.classList.remove('selected'));
            el.classList.add('selected');
            currentPrice = el.getAttribute('data-price');
            document.getElementById('total-price').innerText = currentPrice;
        }
        function generateKey() {
            const key = "ADM97-" + Math.random().toString(36).substr(2, 9).toUpperCase();
            document.getElementById('key-output').innerText = key;
        }
    </script>
</body>
</html>
